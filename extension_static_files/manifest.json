{
    "manifest_version": 2,
    "name": "Cookie Manager",
    "version": "0",
    "description": "Cookie Manager",
    "background": {
        "scripts": [
            "modules/loader.js",
            "modules/utils.js",
            "modules/cookiesObserver.js",
            "modules/contextMenu.js",
            "modules/pageAction.js",
            "modules/datastore.js",
            "modules/cookies.js"
        ],
        "persistent": false
    },
    "page_action": {},
    "permissions": [
        "cookies",
        "storage",
        "activeTab",
        "contextMenus",
        "<all_urls>"
    ]
}
